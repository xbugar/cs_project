<Window x:Class="ExpenseManager.Ui.Views.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:scottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:ExpenseManager.Ui.Views"
        xmlns:vm="clr-namespace:ExpenseManager.Ui.ViewModels"
        mc:Ignorable="d"
        Title="MainApp" Height="700" Width="1200" Background="#16222E" Foreground="AliceBlue"
        FontFamily="{StaticResource FunnelDisplayFont}" FontSize="20">
    <Grid Margin="10, 10, 10, 10">
        <Grid.DataContext>
            <vm:AppViewModel />
        </Grid.DataContext>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7.5*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Expense Manager" FontSize="34" FontWeight="ExtraBold"
                       HorizontalAlignment="Left">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" Opacity="0.5" ShadowDepth="5" />
                </TextBlock.Effect>
            </TextBlock>
            <scottPlot:WpfPlot Grid.Row="1" x:Name="WpfPlot1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                               Background="#16222E" />
            <TextBlock Grid.Row="2" Text="Build habits, buy crack" FontWeight="Bold" HorizontalAlignment="Left" />
        </Grid>

        <Border Grid.Column="1" Background="#000000" Padding="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="User1984" FontWeight="Bold" VerticalAlignment="Center"
                                   HorizontalAlignment="Stretch" />
                        <Border Grid.Column="1" Margin="5" Background="#0f0f0f" CornerRadius="5">
                            <Grid Margin="5, 5, 5, 5">
                                <svgc:SvgViewbox Source="pack://application:,,,/Views/Pictures/LogOut.svg"
                                                 Stretch="Uniform"
                                                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="25"
                                                 Height="25" />
                                <Button Background="Transparent" Foreground="Transparent" BorderBrush="Transparent"
                                        Command="{Binding LogOutCommand}" />
                            </Grid>
                        </Border>
                    </Grid>
                    <Rectangle HorizontalAlignment="Stretch" Fill="AliceBlue" Height="2">
                        <Rectangle.Effect>
                            <DropShadowEffect BlurRadius="5" Opacity="0.5" ShadowDepth="5" />
                        </Rectangle.Effect>
                    </Rectangle>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="Accounts:" Foreground="#46525E" FontSize="15" Margin="0, 5, 0, 5" />
                <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">

                    <StackPanel Height="Auto">
                        <ItemsControl ItemsSource="{Binding Accounts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,10" CornerRadius="5" Background="#0f0f0f">
                                        <Grid>

                                            <Border Width="5" HorizontalAlignment="Left"
                                                       Background="{Binding Color}" CornerRadius="5, 0, 0, 5"/>
                                            <Grid Margin="10">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="{Binding Name}" FontWeight="Bold" />
                                                <TextBlock Grid.Row="1" Grid.Column="0"
                                                           Text="{Binding Description}" FontSize="14" />
                                                <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                                           Text="{Binding Balance}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Border Margin="5" Background="#9D00FF" CornerRadius="10">
                            <Button Background="Transparent" BorderBrush="Transparent" Content="Add an account" />
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>